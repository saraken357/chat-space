.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__name
      = current_user.name
      .side-header__box__icons
        .side-header__box__icons__new-group
        = link_to new_group_path(current_user) do
          = icon('fas', 'pen-square', class: 'icon')
        .side-header__box__icons__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
